getnews () {
  curl https://newsapi.org/v2/top-headlines -s -G -d sources=$1 -d apiKey=d6c0406372b147a296011ebd5dc09bd8 | jq '.articles[] | .title'
}


# function to set terminal title  
function title() {
  if [[ -z "$ORIG" ]]; then
    ORIG=$PS1
  fi
  TITLE="\[\e]2;$*\a\]"
  PS1=${ORIG}${TITLE}
}


